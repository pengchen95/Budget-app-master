<div class="jumbotron text-center col-xs-20 col-xs-offset-1 col-sm-offset-3 col-sm-5 col-md-15">
  <h1>Sign Up</h1>
  <br/><br/>
{{#if session.isAuthenticated}}
<p>You are currently login</p>
{{else}}
<div class="form-horizontal form-group form-group-lg row">
   <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
     {{input type="text" value=textName class="form-control" placeholder="Name"}}
     {{input type="text" value=textAddress class="form-control" placeholder="Your Address"}}
     {{input type="email" value=emailAddressS class="form-control" placeholder="E-mail Address." autofocus="autofocus"}}
     {{input type="password" value=textS class="form-control" placeholder="Password."}}

   </div>
   <div class="col-xs-20 col-xs-offset-1 col-sm-offset-3 col-sm-4 col-md-3">
       <button class="btn btn-primary btn-lg btn-block" disabled={{isDisabled}} {{action 'createUser'}}>Sign Up</button>
   </div>
 </div>
{{/if}}
</div>
